server {
     listen       <%= @port -%>;
     listen       [::]:<%= @port %>;
     server_name  <%= @server_name %>;

     access_log   <%= @nginx_log_dir %>/<%= @server_name %>.access.log;

     location / {
          root      <%= @default_root %>;
          index     index.php index.html index.htm;
          try_files $uri $uri/ =404;
     }
}
